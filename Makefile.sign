CFLAGS	= -Wall -g
LDFLAGS	= -lt_cose -lqcbor -lm
INC		= -I ./inc -I ./examples/inc
TARGET	= ./bin/suit_manifest_sign
SRCS =	examples/suit_manifest_sign_main.c \
		examples/suit_examples_common.c \
		examples/suit_examples_cose.c \
		src/suit_common.c \
		src/suit_digest.c \
		src/suit_cose.c \
		src/suit_manifest_encode.c \
		src/suit_manifest_decode.c \
		src/suit_manifest_print.c
OBJDIR	= ./obj
OBJS	= $(addprefix $(OBJDIR)/,$(patsubst %.c,%.o,$(SRCS)))

ifeq ($(MBEDTLS),1)
    # use MbedTLS
    CFLAGS	+= -DLIBCSUIT_PSA_CRYPTO_C=1
    LDFLAGS	+= -lmbedtls -lmbedx509 -lmbedcrypto
else
    # use OpenSSL
    LDFLAGS += -lcrypto
endif

$(TARGET):	$(OBJS)
	mkdir -p ./bin
	$(CC) -o $@ $^ $(LDFLAGS)

$(OBJDIR)/%.o:	%.c
	mkdir -p $(dir $@)
	$(CC) $(CFLAGS) $(INC) -o $@ -c $<

.PHONY: all test clean

all: $(TARGET)

clean:
	$(RM) $(OBJS) $(TARGET)
